# ===========================================
# Meal Planning App - Environment Variables
# ===========================================

# Application
APP_ENV=production
DEBUG=false

# Database (Supabase - Seoul Region)
# Get from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Redis (Upstash)
# Get from: https://console.upstash.com/redis
REDIS_URL=rediss://default:[YOUR-PASSWORD]@[YOUR-ENDPOINT].upstash.io:6379

# JWT Security
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Korean Recipe APIs
# 식품안전나라: https://www.foodsafetykorea.go.kr/apiMain.do
FOODSAFETYKOREA_API_KEY=
# 농식품정보원: https://data.mafra.go.kr (회원가입 시 자동 발급)
MAFRA_API_KEY=

# External Recipe APIs (Optional)
SPOONACULAR_API_KEY=
THEMEALDB_API_KEY=

# OpenAI (for URL extraction)
OPENAI_API_KEY=

# CORS
CORS_ORIGINS=https://your-app.vercel.app

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
